<div class="jumbotron" style="height: 400px;background-size: cover; background-image: url(https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80");>
  <h1 class="display-4">Our Chefs</h1>
  <p class="lead">The best chefs in the world - in your kitchen.</p>
</div>
<div class="container">
    <div class="cards pt-3">
        <% @chefs.each do |chef| %>	
            <div class="card-trip-index">
                <% if chef.photos[0].present? %>
                    <%=  cl_image_tag chef.photos[0].key %>
                <% else %>
                    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                <% end %>
                <div class="card-trip-infos">
                    <div>
                    <h2><%= link_to "#{chef.user.first_name} #{chef.user.last_name}", chef_path(chef) %></h2>
                    <p> Cuisine |  <%= chef.cuisine %> <br>	
                        Rating | <%= chef.rating %>	
                    </p>	
                    </div>
                    <h2 class="card-trip-pricing">Â£ <%=chef.price%> per head</h2>
                    <% if chef.user.photo.attached? %>
                        <%=  cl_image_tag chef.user.photo.key, :gravity=>"faces", :width=>42, :height=>42, :crop=>"fill", class: "card-trip-user avatar-bordered" %>
                    <% else %>
                        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                    <% end %>
                </div>
            </div>
        <% end %>	
    </div>
</div>